{% extends 'base.html.twig' %}

{% block title %}liste films{% endblock %}

{% block body %}
{# <h1 class="pt-2 text-center">Films - Choose Movie</h1> #}
{{ form_start(formFiltreFilms) }} 
<div class="container pt-4">
    <div class="row">
        <div class="col">{{ form_row(formFiltreFilms.titre) }}</div>
        <div class="col">{{ form_row(formFiltreFilms.genre) }}</div>
        <div class="col"><button type="submit" class="btn btn-primary pt-2">Rechercher</button></div>
        {# <button type="submit" class="btn btn-primary">Rechercher</button> #}
    </div>
</div
    
{{ form_end(formFiltreFilms) }} 
<br>
<div class="body-margin">
    <div class="row pt-5 ">
    {% for leFilm in lesFilms %}
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl-2">
                <div class="card mb-3" style="border: 0px; border-radius: 5px;">
                    <a href="{{ path('ficheFilm', {'id': leFilm.id}) }}">
                        <img class="avatar mx-auto d-block" style="height: 100%; width: 100%; object-fit: cover;  display: block; border-radius: 5px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);" src="{{leFilm.image}}" alt="{{leFilm.titre}}">
                    </a>            
                </div>
            </div>
    {% endfor %}

        <div class="navigation d-flex align-items-center justify-content-center">
            {{ knp_pagination_render(lesFilms) }}
        </div>

    </div>
</div>

<style>
    .navigation a {
        color: var(--primary);
        background-color: var(--secondary);
    }
</style>
{% endblock %}
